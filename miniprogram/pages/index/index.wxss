@import "../../common/index.wxss";

.module-group {
  padding: 40rpx;
  background-color: #fff;
}

.module-group .module-top{
  font-size: 36rpx;
  display: flex;
  justify-content: space-between;
}

.module-top .module-title{
  color: #494949;
}

.module-top .module-more{
  color: #41be47;
}
.module-scroll-view{
  margin-top: 40rpx;
  width: 100%;
  height: 400rpx;
  white-space: nowrap;
}

.module-scroll-view .item-navigator{
  width: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.item-navigator .item-group{
  width: 100%;
}

.item-group{
  width: 100%;
  height: 284rpx;
}

.thumbnail-group {
  width: 100%;
  height: 100%;
}

 .thumbnail{
  width: 100%;
  height: 100%;
}

.item-group {
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}
.item-title{
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}